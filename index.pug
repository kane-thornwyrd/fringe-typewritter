doctype html
html(lang='fr')
  head
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    title AgorA
    style.
      * {
        box-sizing: border-box;
      }
      html,body{
        margin: 0;
      }
      #content{
        margin: 2em auto;
        padding:16px;
        width:80%;
        box-shadow:0 5px 2em #c5c5c5;
        word-break: break-all;
        white-space: pre-wrap;
      }
      form{
        margin: auto;
        width:80%;
      }
      form input{
        width:100%;
        margin:0;
      }
  body
    pre#content #{content}
